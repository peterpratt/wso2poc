<?xml version="1.0" encoding="UTF-8"?>
<endpoint name="messpocend" xmlns="http://ws.apache.org/ns/synapse">
    <address format="rest" uri="http://localhost:8290/services/messageProxy">
        <suspendOnFailure>
            <initialDuration>-1</initialDuration>
            <progressionFactor>1</progressionFactor>
        </suspendOnFailure>
        <markForSuspension>
            <retriesBeforeSuspension>3</retriesBeforeSuspension>
            <retryDelay>1000</retryDelay>
        </markForSuspension>
    </address>
</endpoint>
